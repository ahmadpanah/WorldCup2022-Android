<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:andorid="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    app:cardElevation="8dp"
    android:padding="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#9C27B0">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="8dp"
                                android:gravity="center_vertical" >
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:id="@+id/imageView_home" />
                                    <TextView
                                        android:text="Home"
                                        android:layout_marginStart="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/text_view_home"
                                        android:textColor="#fff"
                                        android:textSize="20sp"
                                        android:padding="8dp"

                                        />
                            </LinearLayout>
                            <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical" >
                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView_away" />
                            <TextView
                                android:text="Away"
                                android:layout_marginStart="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/text_view_away"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:padding="8dp"

                                />
                        </LinearLayout>

                    </LinearLayout>
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="wrap_content"
                       android:gravity="center_vertical"
                       android:layout_height="wrap_content"
                       >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_time"
                            android:textSize="20sp"
                            android:text="Time"
                            android:textColor="#CCDC39"
                            android:padding="8dp"
                            android:textAlignment="textEnd"
                            android:layout_marginStart="12dp"/>

                   </LinearLayout>

            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match Name"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/textView_match"
            android:textStyle="bold"
            android:padding="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FIFA WorldCup 2022"
            android:textColor="#FFF200"
            android:textAlignment="center"
            android:textSize="20sp"

            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>